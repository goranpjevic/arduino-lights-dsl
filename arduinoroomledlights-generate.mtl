bool toggleOneLight(int buttonPin,int LEDpin,bool LEDon){
  if(digitalRead(buttonPin)==LOW){
    if (!LEDon){
        digitalWrite(LEDpin,HIGH);
      return !LEDon;
    } else {
      digitalWrite(LEDpin,LOW);
      return !LEDon;
    }
  }
  return LEDon;
}

